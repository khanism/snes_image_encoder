    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'snes_image_encoder'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=snes_image_encoder",
                    "--package=snes_image_encoder"
                ],
                "filter": {
                    "name": "snes_image_encoder",
                    "kind": "bin"
                }
            },
            "args": ["-i", "test_sprite.bmp", "-o", "test_output.pal"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'snes_image_encoder'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=snes_image_encoder",
                    "--package=snes_image_encoder"
                ],
                "filter": {
                    "name": "snes_image_encoder",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}